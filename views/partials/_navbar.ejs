<nav class="navbar nav-light bg-light">

  <!-- if user IS logged in, show HI USER, UPDATE PROFILE, LOGOUT -->
  <!-- else user is NOT logged in, show LOGIN and REGISTER -->

  <% if (userId) { %>
    <form class="form-inline">
      <span class="login-hello">Hello <%= userId %>!</span>
      <div class="nav-link profile-toggle ml-auto p-2" href="#">Change Password</div>
      <!-- <a class="nav-link logout" action="/api/logout" method="POST">Logout</a> -->

    </form>
    <form action="api/logout" method='POST'>
        <input type="submit" value='Logout'>
      </form>

  <% } else { %>
  <div class="d-flex justify-content-start">
    <form class="form-inline">
      <div class="nav-link register-toggle ml-auto p-2">Register</div>
      <a class="nav-link login-toggle ml-auto p-2" href="#">Login</a>
    </form>
  </div>
  <% } %>

</nav>


